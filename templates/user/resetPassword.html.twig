{% extends 'base.html.twig' %}

{% block title %}SnowTricks | Réinitialisation du mot passe{% endblock %}

{% block body %}
<div class="bloc-password">
    <h1 id="title-bloc-password">Réinitialisation du mot de passe</h1>
    <div class="bloc-form-password col-9 col-sm-6 col-lg-5 col-xl-4 col-xxl-3">
        {{ form_start(resetForm,{'attr':{'id' : 'form-password'}}) }}
        <div class="raw-form-reset-password" title="Veuillez saisir un mot de passe">{{ form_row(resetForm.plainPassword) }}</div>
        <div class="form-button">
            <button class="btn btn-primary ">{{ button_label|default('Réinitialiser') }}</button>
        </div>
        {{ form_end(resetForm) }}
    </div>
</div>

{% endblock %}
