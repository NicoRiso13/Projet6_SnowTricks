{% extends 'base.html.twig' %}

{% block title %}SnowTricks | Mon compte{% endblock %}

{% block body %}
    <div class="bloc-user-page">
        <h1>Mon Compte</h1>
        <div class="bloc-details-user">
            {% if user.picture is not empty %}
                <div class="user-picture" style="background-image: url('/uploads/userPicture/{{ user.picture }}')"></div>
            {% else %}
                <div class="user-picture" style="background-image: url('/uploads/userPicture/defaut_user_picture.png')"></div>
            {% endif %}
            <div class="bloc-user-info container-fluid col-10 col-sm-7 col-lg-6 col-xl-5 col-xxl-4">
                <div class="infos-user col-8">
                    <h2>Nom</h2>
                    <p>{{ user.firstname }}</p>
                </div>
                <div class="infos-user col-8">
                    <h2>Prénom</h2>
                    <p>{{ user.name }}</p>
                </div>
                <div class="infos-user col-8">
                    <h2>Email</h2>
                    <p>{{ user.email }}</p>
                </div>
                <div class="infos-user col-8">
                    <h2>Rôle</h2>
                    {% if user.roles == ['ROLE_USER'] %}
                        <p>Utilisateur</p>
                    {% else %}
                        <p>Administrator</p>
                    {% endif %}
                </div>
                <div class="infos-user col-8">
                    <h2>Date de création du compte</h2>
                    <p>{{ user.createdAt | format_datetime('full', 'none',locale='fr') | capitalize }}</p>
                </div>

                <a class="btn btn-primary btn-modify-account" href="{{path('app_user_edit', {'id': app.user.id})}}">Modifier mon compte</a>

            </div>
        </div>
    </div>
{% endblock %}
